@model RnD.KashPlugSample.ViewModels.AccountViewModel
@using (Ajax.BeginForm("Delete", "Account", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "DeleteAccountSuccess",
        }, new { @id = "deleteAccountForm" }))
{
    <div id="deleteAccountPage">
        <div class="row-fluid">
            <div id="updateTargetId" class="alert-warning " style="display: none">
            </div>
            @Html.HiddenFor(model => model.AccountId)
        </div>
        <div class="row-fluid">
            <div class="control-group">
                Do you want to delete this record?
            </div>
        </div>
        <div class="row-fluid">
            <div id="deleteCategoryButtonZone" class="pull-right">
                <button type="submit" class="btn btn-primary" id="btnSubmit" name="btnSubmit">
                    Delete</button>
                <button type="button" class="btn btn-warning" id="btnCancel" name="btnCancel" onclick=" $($(this).dialog('close'));">
                    Cancel</button>
            </div>
        </div>
    </div>
}
