@{
    ViewBag.Title = "Home Page";
}
<div id="indexPage">
    <div class="row">
        <section class="col-lg-6">
            <!-- Custom tabs (Charts with tabs)-->
            <div class="nav-tabs-custom">
                <!-- Tabs within a box -->
                <ul class="nav nav-tabs pull-right">
                    <li class="active"><a href="#barChartYearTab" data-toggle="tab">Year</a></li>
                    <li><a href="#barChartMonthTab" data-toggle="tab">Month</a></li>
                    <li><a href="#barChartWeekTab" data-toggle="tab">Week</a></li>
                    <li class="pull-left header"><i class="ion ion-stats-bars"></i> Bar Charts</li>
                </ul>
                <div class="tab-content no-padding">
                    <!-- Morris chart - Bar Charts -->
                    <div class="chart tab-pane active" id="barChartYearTab" style="position: relative; height: 300px;">
                        <div id="barChartYear" class="chart" style="height: 300px;"></div>
                    </div>
                    <div class="chart tab-pane" id="barChartMonthTab" style="position: relative; height: 300px;">
                        <div id="barChartMonth" class="chart" style="height: 300px;"></div>
                    </div>
                    <div class="chart tab-pane" id="barChartWeekTab" style="position: relative; height: 300px;">
                        <div id="barChartWeek" class="chart" style="height: 300px;"></div>
                    </div>
                </div>
            </div><!-- /.nav-tabs-custom -->
        </section>
        <section class="col-lg-6">
            <!-- Custom tabs (Charts with tabs)-->
            <div class="nav-tabs-custom">
                <!-- Tabs within a box -->
                <ul class="nav nav-tabs pull-right">
                    <li class="active"><a href="#pieChartYearTab" data-toggle="tab">Year</a></li>
                    <li><a href="#pieChartMonthTab" data-toggle="tab">Month</a></li>
                    <li><a href="#pieChartWeekTab" data-toggle="tab">Week</a></li>
                    <li class="pull-left header"><i class="ion ion-pie-graph"></i> Pie Charts</li>
                </ul>
                <div class="tab-content no-padding">
                    <!-- Morris chart - Pie Charts -->
                    <div class="chart tab-pane active" id="pieChartYearTab" style="position: relative; height: 300px;">
                        <div id="pieChartYear" class="chart" style="height: 300px;"></div>
                    </div>
                    <div class="chart tab-pane" id="pieChartMonthTab" style="position: relative; height: 300px;">
                        <div id="pieChartMonth" class="chart" style="height: 300px;"></div>
                    </div>
                    <div class="chart tab-pane" id="pieChartWeekTab" style="position: relative; height: 300px;">
                        <div id="pieChartWeek" class="chart" style="height: 300px;"></div>
                    </div>
                </div>
            </div><!-- /.nav-tabs-custom -->
        </section>
    </div>
    <div class="row">
        <section class="col-lg-12">
            <!-- Grid List -->
            <div class="box box-primary">
                
                <div class="box-body">
                    <div id="dashbroadGridZone">
                        <!-- Custom tabs (Charts with tabs)-->
                        <div class="nav-tabs-custom">
                            <!-- Tabs within a box -->
                            <ul class="nav nav-tabs pull-right">
                                <li class="active"><a href="#dashbroadGridYearTab" data-toggle="tab">Year</a></li>
                                <li><a href="#dashbroadGridMonthTab" data-toggle="tab">Month</a></li>
                                <li><a href="#dashbroadGridWeekTab" data-toggle="tab">Week</a></li>
                                <li class="pull-left header"><i class="fa fa-table"></i> Grid List</li>
                            </ul>
                            <div class="tab-content no-padding">
                                <!-- Morris chart - Pie Charts -->
                                <div class="chart tab-pane active" id="dashbroadGridYearTab" style="position: relative; height: 300px;">
                                    <div id="dashbroadGridYear"></div>
                                </div>
                                <div class="chart tab-pane" id="dashbroadGridMonthTab" style="position: relative; height: 300px;">
                                    <div id="dashbroadGridMonth"></div>
                                </div>
                                <div class="chart tab-pane" id="dashbroadGridWeekTab" style="position: relative; height: 300px;">
                                    <div id="dashbroadGridWeek"></div>
                                </div>
                            </div>
                        </div><!-- /.nav-tabs-custom -->
                    </div>
                </div><!-- /.box-body -->
                
            </div><!-- /.box -->
        </section>
    </div>
</div>
<script type="text/javascript">

    //-----------------------------------------------------
    //start Refresh Kendo Grid Funtion For Index Page
    function KendoGridRefreshInIndexPage() {
        //Get Grid
        var kdGrid = $('#gridAccount').data('kendoGrid');
        kdGrid.dataSource.read();
    }
    //-----------------------------------------------------
    //end Refresh Kendo Grid Funtion For Index Page

    $(document).ready(function () {

        //        //-----------------------------------------------------
        //        //start Morris Charts Methods

        //        //Morris Donut Chart
        //        var _morrisDonutChartElementId = "pieChartYear";
        //        var _morrisDonutChartReadUrl = '@Url.Action("MorrisDonut", "Chart")';

        //        LoadMorrisDonutChart(_morrisDonutChartElementId, _morrisDonutChartReadUrl);

        //        //Morris Bar Chart
        //        var _morrisBarChartElementId = "barChartYear";
        //        var _morrisBarChartReadUrl = '@Url.Action("MorrisBar", "Chart")';

        //        LoadMorrisBarChart(_morrisBarChartElementId, _morrisBarChartReadUrl);

        //        //end Morris Charts Methods
        //        //-----------------------------------------------------


        //-----------------------------------------------------
        //start Flot Charts Methods

        //Flot Pie Chart
        var _flotPieChartElementId = "#pieChartYear";
        var _flotPieChartReadUrl = '@Url.Action("FlotPie", "Chart")';

        LoadFlotPieChart(_flotPieChartElementId, _flotPieChartReadUrl);

        //Flot Bar Chart
        var _flotBarChartElementId = "#barChartYear";
        var _flotBarChartReadUrl = '@Url.Action("FlotBar", "Chart")';

        LoadFlotBarChart(_flotBarChartElementId, _flotBarChartReadUrl);

        //end Flot Charts Methods
        //-----------------------------------------------------

        //-----------------------------------------------------
        //start Grid Methods

        var _gridId = "#dashbroadGridYear";
        var _gridReadUrl = '@Url.Action("DashboardGridRead", "Home")';

        $(_gridId).kendoGrid({
            dataSource: {
                transport: {
                    read: _gridReadUrl
                },
                schema: {
                    data: function (data) {
                        return data.Data;
                    },
                    model: {
                        fields: {
                            SaleOrIncomeId: { type: "number" },
                            CostOrExpenseId: { type: "number" },

                            Title: { type: "string" },
                            InAmount: { type: "number" },
                            OutAmount: { type: "number" },
                            BalanceAmount: { type: "number" },
                            TotalAmount: { type: "number" },
                            CreateDate: { type: "date" }
                        }
                    }, //end model
                    total: function (data) {
                        return data.Total;
                    }
                },
                //pageSize: 20,
                serverPaging: true,
                serverFiltering: false,
                serverSorting: true
            },
            height: 250,
            filterable: true,
            groupable: true,
            sortable: true,
            resizable: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                pageSizes: [20, 40, 60, 80, 100]
            },
            columns: [{ field: "SaleOrIncomeId", title: "SaleOrIncomeId", hidden: true, filterable: false, sortable: false },
                      { field: "CostOrExpenseId", title: "CostOrExpenseId", hidden: true, filterable: false, sortable: false },
                  { field: "Title", title: "Title" },

                  { field: "InAmount", title: "Credit" },

                  { field: "OutAmount", title: "Debit" },

                  { field: "BalanceAmount", title: "Balance" },

                  { field: "TotalAmount", title: "Total", hidden: true, filterable: false, sortable: false },

                  { field: "CreateDate", title: "CreateDate", hidden: true, filterable: false, sortable: false }

        ]
        });

        //end Grid Methods
        //-----------------------------------------------------

    });

</script>
<script src="@Url.Content("~/Scripts/App/app-charts-jq.js")" type="text/javascript"></script>
